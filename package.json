{
  "name": "language-hurl",
  "version": "1.0.0",
  "author": "Niklas Mollenhauer",
  "description": "Syntax support for hurl files",
  "repository": "https://github.com/nikeee/language-hurl",
  "license": "MIT",
  "private": true,
  "scripts": {
    "test": "vscode-tmgrammar-snap --grammar ./grammar/hurl.tmlanguage.json ./test/*",
    "snap:update": "vscode-tmgrammar-snap --updateSnapshot --grammar ./grammar/hurl.tmlanguage.json ./test/*",
    "format": "biome format --write .",
    "ci": "biome ci"
  },
  "keywords": [
    "hurl",
    "github",
    "linguist",
    "tmlanguage"
  ],
  "contributes": {
    "languages": [
      {
        "id": "hurl",
        "aliases": [
          "Hurl",
          "hurl"
        ],
        "extensions": [
          ".hurl"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "hurl",
        "scopeName": "source.hurl",
        "path": "./grammar/hurl.tmlanguage.json"
      }
    ]
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.4",
    "nodemon": "^3.1.10",
    "vscode-tmgrammar-test": "^0.1.3"
  }
}
